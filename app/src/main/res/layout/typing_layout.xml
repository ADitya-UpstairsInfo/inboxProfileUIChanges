<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/typing_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/content_chat"
    >
<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    card_view:contentPadding="5dp"

    card_view:cardBackgroundColor="@color/colorPrimary"
    card_view:cardCornerRadius="28dp"

    card_view:cardElevation="0dp">



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:gravity="center"
    android:orientation="horizontal"

    >


    <ImageView
        android:layout_marginLeft="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/emoji_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"

        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/ic_sticker_icon" />



    <com.yearlater.inboxmessenger.views.ChatEditText
        android:textColor="#e986d9"
        android:id="@+id/et_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="6dp"
        android:layout_weight="1"
        android:background="@null"
        android:hint="@string/write_your_message"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines="6"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColorHint="#e986d9"
        android:textSize="@dimen/et_message_text_size"

        />


    <ImageView
        android:id="@+id/img_attachment"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:background="?attr/selectableItemBackgroundBorderless"

        app:srcCompat="@drawable/ic_pin"
        />


    <ImageView
        android:id="@+id/camera_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/ic_camera_icon" />


</LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>